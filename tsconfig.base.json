{
    "compilerOptions": {

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

		"allowJs": false,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,

        "baseUrl": ".",
        "paths": {
            "@libs/*": [ "libs/*/source/index.ts" ]
        }

    }
}