{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Build Action Schema",
  "type": "object",
  "required": ["name", "description", "inputs", "runs"],
  "properties": {
    "name": { "type": "string", "const": "Build" },
    "description": { "type": "string", "minLength": 1 },
    "inputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["description", "required"],
        "properties": {
          "description": { "type": "string", "minLength": 1 },
          "required": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "runs": {
      "type": "object",
      "required": ["using", "steps"],
      "properties": {
        "using": { "type": "string", "enum": ["composite"] },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "shell": { "type": "string" },
              "run": { "type": "string" },
              "uses": { "type": "string" },
              "with": { "type": "object", "additionalProperties": true },
              "env": { "type": "object", "additionalProperties": { "type": "string" } },
              "working-directory": { "type": "string" }
            },
            "anyOf": [
              { "required": ["run", "name"] },
              { "required": ["uses", "name"] }
            ],
            "allOf": [
              {
                "if": { "required": ["run"] },
                "then": { "required": ["shell"] }
              }
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
